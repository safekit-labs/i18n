{
  "name": "@safekit/i18n",
  "version": "0.5.0",
  "author": "safekit",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/safekit-labs/i18n.git"
  },
  "type": "module",
  "types": "./dist/index.d.ts",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./server": {
      "types": "./dist/server.d.ts",
      "import": "./dist/server.js",
      "require": "./dist/server.js"
    }
  },
  "bugs": {
    "url": "https://github.com/safekit-labs/i18n/issues"
  },
  "description": "A lightweight type-safe i18n library with interpolation support and namespace scoping",
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "package.json"
  ],
  "homepage": "https://github.com/safekit-labs/i18n",
  "keywords": [
    "typescript",
    "i18n",
    "internationalization",
    "translation",
    "type-safe",
    "interpolation",
    "namespace",
    "safe",
    "safekit"
  ],
  "license": "MIT",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit -p tsconfig.json",
    "build": "bun clean && tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json -f",
    "dev": "tsc -p tsconfig.build.json --watch",
    "dev:typecheck": "bun typecheck --watch --preserveWatchOutput",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "test": "vitest",
    "ci": "bun run lint && bun run typecheck && bun run build && bun run test --run",
    "release": "semantic-release",
    "git": "bun run ci && git add . && git commit -m",
    "postgit": "git pull --rebase origin main && git push --all"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/node": "^24.1.0",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "jiti": "^2.4.2",
    "prettier": "^3.6.2",
    "semantic-release": "^25.0.2",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.8.3",
    "vite": "^7.0.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  }
}
